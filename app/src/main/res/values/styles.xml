<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="backgroundColor">#343434</item>
        <item name="backgroundTint">#343434</item>
        <item name="cornerRadius">9dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CalculatorButtonRedBackground" parent="CalculatorButton">
        <item name="backgroundTint">#FF5959</item>
        <item name="android:textColor">#343434</item>
    </style>

    <style name="CalculatorButtonGreenBackground" parent="CalculatorButton">
        <item name="backgroundTint">#66FF7F</item>
        <item name="android:textColor">#343434</item>
    </style>

    <style name="CalculatorButtonGreenText" parent="CalculatorButton">
        <item name="android:textColor">#66FF7F</item>
    </style>

</resources>

