<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151515"
    android:padding="14dp"
    tools:context=".MainActivity">

    <HorizontalScrollView
        android:id="@+id/operation_display_scroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="64dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/result_display_scroll"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/operation_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text=""
            android:textColor="@color/white"
            android:textSize="48sp"
            android:lines="1" />
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/result_display_scroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/operation_display_scroll"
        app:layout_constraintBottom_toTopOf="@id/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/result_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="0"
            android:maxLines="1"
            android:textColor="#969696"
            android:textSize="48sp" />
    </HorizontalScrollView>

    <View
        android:id="@+id/border"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="9dp"
        android:layout_marginBottom="21dp"
        android:background="#4E4D4D"
        app:layout_constraintBottom_toTopOf="@id/numbers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <GridLayout
        android:id="@+id/numbers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="4:5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Row 1 -->
        <Button
            android:id="@+id/button_clear"
            style="@style/CalculatorButtonRedBackground"
            android:layout_row="0"
            android:layout_column="0"
            android:text="C" />

        <Button
            android:id="@+id/button_change_sign"
            style="@style/CalculatorButton"
            android:layout_row="0"
            android:layout_column="1"
            android:lines="1"
            android:padding="0dp"
            android:text="+/-" />

        <Button
            android:id="@+id/button_percent"
            style="@style/CalculatorButtonGreenText"
            android:layout_row="0"
            android:layout_column="2"
            android:text="%"
            android:textSize="29sp" />

        <Button
            android:id="@+id/button_divide"
            style="@style/CalculatorButtonGreenText"
            android:layout_row="0"
            android:layout_column="3"
            android:text="รท" />

        <!-- Row 2 -->
        <Button
            android:id="@+id/button7"
            style="@style/CalculatorButton"
            android:layout_row="1"
            android:layout_column="0"
            android:text="7" />

        <Button
            android:id="@+id/button_8"
            style="@style/CalculatorButton"
            android:layout_row="1"
            android:layout_column="1"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            style="@style/CalculatorButton"
            android:layout_row="1"
            android:layout_column="2"
            android:text="9" />

        <Button
            android:id="@+id/button_multiply"
            style="@style/CalculatorButtonGreenText"
            android:layout_row="1"
            android:layout_column="3"
            android:text="ร" />

        <!-- Row 3 -->
        <Button
            android:id="@+id/button4"
            style="@style/CalculatorButton"
            android:layout_row="2"
            android:layout_column="0"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            style="@style/CalculatorButton"
            android:layout_row="2"
            android:layout_column="1"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            style="@style/CalculatorButton"
            android:layout_row="2"
            android:layout_column="2"
            android:text="6" />

        <Button
            android:id="@+id/button_minus"
            style="@style/CalculatorButtonGreenText"
            android:layout_row="2"
            android:layout_column="3"
            android:text="-" />

        <!-- Row 4 -->
        <Button
            android:id="@+id/button1"
            style="@style/CalculatorButton"
            android:layout_row="3"
            android:layout_column="0"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            style="@style/CalculatorButton"
            android:layout_row="3"
            android:layout_column="1"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            style="@style/CalculatorButton"
            android:layout_row="3"
            android:layout_column="2"
            android:text="3" />

        <Button
            android:id="@+id/button_plus"
            style="@style/CalculatorButtonGreenText"
            android:layout_row="3"
            android:layout_column="3"
            android:text="+" />

        <!-- Row 5 -->
        <Button
            android:id="@+id/button0"
            style="@style/CalculatorButton"
            android:layout_row="4"
            android:layout_column="0"
            android:text="0" />

        <Button
            android:id="@+id/button_dot"
            style="@style/CalculatorButton"
            android:layout_row="4"
            android:layout_column="1"
            android:text="." />

        <Button
            android:id="@+id/button_equal"
            style="@style/CalculatorButtonGreenBackground"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:text="=" />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
